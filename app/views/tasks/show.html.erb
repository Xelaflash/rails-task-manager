
  <div class="container">
    <h1><%= @task.title %></h1>
    <p><%= @task.details %></p>
      <% if @task.completed%>
        <h3><i class="far fa-check-square"></i> This task is already completed</h3>
      <%else %>
        <h3><i class="far fa-square"></i> This task is not yet completed </h3>
      <% end  %>

    <%= link_to "Return to list", tasks_path, class: "btn btn-success" %>
    <%= link_to "Edit tasks", edit_task_path(@task), class: "btn btn-danger" %>
  </div>





